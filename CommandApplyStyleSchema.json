{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "CommandApplyStyleSchema.json",
  "type": "object",
  "properties": {
    "Name": {
      "type": "string",
      "enum": [ "ApplyStyle" ],
      "description": "Command name must be 'ApplyStyle'"
    },
    "StyleName": {
      "type": "string",
      "description": "The name of the style to apply"
    },
    "CommandRange": {
      "type": "string",
      "enum": [ "Selection", "Paragraphs", "FirstParagraph", "FirstWord", "LastWord", "StartOfParagraph", "EndOfParagraph", "BeforeSelection", "AfterSelection" ],
      "description": "Defines the range where the style should be applied"
    }
  },
  "required": [ "Name", "StyleName", "CommandRange" ]
}
